<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="7dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:id="@+id/lin_layout"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18sp"
            android:text="Blood group"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/bg"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/btn_sign_in"></Spinner>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/name"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            app:met_textColor="@color/text_color"
            app:met_baseColor="@color/text_color"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/text_color"
            app:met_singleLineEllipsis="true"
            app:met_errorColor="@color/btn_sign_in"
            />
        <com.rengwuxian.materialedittext.MaterialEditText




            android:id="@+id/ph"
            android:inputType="textPhonetic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            app:met_textColor="@color/text_color"
            app:met_baseColor="@color/text_color"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/text_color"
            app:met_minCharacters="10"
            app:met_singleLineEllipsis="true"
            app:met_errorColor="@color/btn_sign_in"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>
