<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="32dp"
    tools:context="com.rescue.blood.instablood.DonorActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/noOfPending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/circle_textview"
        android:gravity="center"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="59sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pendingRecceivers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/noOfPending"
        android:layout_marginTop="57dp" />

</RelativeLayout>